@model IdeoTreeStructure.MVC.Models.TreeUpdateElement

@{
    ViewBag.Title = "EditView";
}

@using (Html.BeginForm("EditNode", "Action", FormMethod.Post))
{
    @Html.Hidden("IdToUpdate", Model.IdToUpdate);
    <p>Content: @Html.TextBoxFor(x => x.NewContent)</p>
    <p>Parent: @Html.TextBoxFor(x => x.NewParentID)</p>
    <input type="submit" value="Submit" />
}
